<%= simple_form_for(@trip) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :origin %>
    <%= f.input :dest %>
    <%= f.input :leave_on %>
    <%= f.input :return_on %>
    <%= f.input :travel_type %>
    <%= f.input :num_passengers %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
