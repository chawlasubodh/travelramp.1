<%- model_class = Trip -%>
<div class="page-header">
  <h1><%=t '.title', :default => Trip %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:origin) %></dt>
      <dd><pre class="prettyprint"><%= @trip.origin %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:dest) %></dt>
      <dd><pre class="prettyprint"><%= @trip.dest %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:leave_on) %></dt>
      <dd><pre class="prettyprint"><%= @trip.leave_on %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:return_on) %></dt>
      <dd><pre class="prettyprint"><%= @trip.return_on %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:travel_type) %></dt>
      <dd><pre class="prettyprint"><%= @trip.travel_type %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:num_passengers) %></dt>
      <dd><pre class="prettyprint"><%= @trip.num_passengers %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              trips_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_trip_path(@trip), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              trip_path(@trip),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

